@model YogaStudio.App.Models.EntityModels.Contact

@{
    ViewBag.Title = "Contact";
}

<div class="contact">
    @if (Model != null && Model.Title != "" && Model.Title != null)
    {
        <h2>@Model.Title</h2>
    }
    else
    {
        <h2>@ViewBag.Title</h2>
    }

    @if (Model != null && Model.Message != "" && Model.Message != null)
    {
        <h3>@Model.Message</h3>
    }

<address>
    @if (Model != null && Model.Address != "" && Model.Address != null)
    {
        @Model.Address<br />
    }

    @if (Model != null && Model.PhoneNumber != "" && Model.PhoneNumber != null)
    {
        <span>Phone:</span>@Model.PhoneNumber<br />
    }
</address>

<address>
    @if (Model != null && Model.SupportEmail != "" && Model.SupportEmail != null)
    {
        <strong>Support:</strong> <a href="mailto:@Model.SupportEmail">@Model.SupportEmail</a><br />
    }

    @if (Model != null && Model.MarketingEmail != "" && Model.MarketingEmail != null)
    {
        <strong>Marketing:</strong> <a href="mailto:@Model.MarketingEmail">@Model.MarketingEmail</a>
    }
</address>
</div>
