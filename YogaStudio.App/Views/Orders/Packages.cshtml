@using YogaStudio.App.Models.EntityModels
@model IEnumerable<OrderPackage>
<div class="container">
    <h1>Packages in the order</h1>
    <table class="table table-striped table-hover ">
        <thead>
            <tr>
                <th>Name</th>
                <th>Quantity</th>
                <th>Price</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var entity in Model)
            {
                <tr>
                    <td>@entity.Package.Name</td>
                    <td>@entity.Units @entity.Package.Price.ToString()[1]</td>
                    <td>$@entity.Package.Price</td>
                </tr>
            }
        </tbody>
    </table>
    <br>
    @Html.ActionLink("Back to my orders", "MyOrders", "Profile", routeValues: new { area = "" }, htmlAttributes: new { @class = "btn btn-danger" })
    <br>
    <br>
</div>
